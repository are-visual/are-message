{
  "private": false,
  "name": "are-message",
  "version": "0.0.1",
  "author": "Y-Hui",
  "description": "This is a React global notification message component. It is a standalone implementation of the are-visual message component.",
  "keywords": [
    "react",
    "components",
    "ui",
    "notification",
    "alert",
    "are-visual",
    "are-message",
    "are"
  ],
  "files": [
    "assets/*.css",
    "assets/*.less",
    "es",
    "lib"
  ],
  "homepage": "https://github.com/are-visual/are-message",
  "license": "MIT",
  "main": "lib/index",
  "module": "es/index",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build && lessc assets/index.less assets/index.css",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/lodash-es": "^4.17.4",
    "@types/react-transition-group": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@umijs/test": "^3.5.14",
    "dumi": "^1.1.24",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-flowtype": "^5.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "father-build": "^1.19.6",
    "gh-pages": "^3.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-idiomatic-css": "^1.1.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "typescript": "^4.2.4",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "ahooks": "^2.10.9",
    "classnames": "^2.3.1",
    "lodash-es": "^4.17.21",
    "react-flip-move": "^3.0.4"
  }
}
